{% extends '::base.html.twig' %}

{% block container %}
    <h1>Musician</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Genres</th>
                <ul>
                    {% for genre in entity.genres %}
                        <li>
                            {{ genre.name }}
                        </li>
                    {% endfor %}
                </ul>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('musician') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('musician_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
