{% block new_band_vacancy_container %}

    <div class="modal fade" id="modalShowNewBandVacancy" tabindex="-1" role="dialog" aria-labelledby="modalShowNewBandVacancy" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Choose band_vacancy</h4>
                </div>
                <div id="divShowNewBandVacancy" class="modal-body">
                    <div class="container">
                    <div class="row">

                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnClose" type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button id="btnSaveNewBandVacancy" type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <script type="application/javascript">
        $(document).ready(function() {
            $(document).on("click","#btnSaveNewBandVacancy",function(e) {

                $("form:first").submit();
                $('#modalShowNewBandVacancy').modal('hide');
            });
            $('#modalShowNewBandVacancy').on('hidden.bs.modal', function () {
                $('div[id^="ze_babundle_band_bandVacancyAssociations"] ').remove();

            });

            $('#modalShowNewBandVacancy').on('show.bs.modal', function () {
                $('.modal .modal-body').css('overflow-y', 'auto');
                $('.modal .modal-body').css('width', '80%');
                $('.modal .modal-body').css('max-height', $(window).height() * 0.7);
            });


        });
    </script>
{% endblock new_band_vacancy_container%}