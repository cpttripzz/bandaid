{% extends '::base.html.twig' %}



{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(edit_form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ form_javascript(edit_form) }}
{% endblock %}
{% block container %}
    {% include 'ZEBABundle::show_new_location_modal.html.twig' %}
    <button class="btn btn-primary" id="btnShowNewLocation" data-target="#largeModal">Add New Address</button>

    {{ form_start(edit_form) }}
    {# render the task's only field: description #}
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.description) }}
    {{ form_row(edit_form.genres) }}
    {{ form_row(edit_form.addresses) }}
    {{ form_row(edit_form.musicians) }}









    {{ form_end(edit_form) }}
    <div class="panel">Band Vacancies
    {% for bandVacancyAssociation in edit_form.vars.value.bandVacancyAssociations %}
        <div class="panel-group" id="accordion">
            <div class="panel panel-default" id="panel{{ bandVacancyAssociation.id }}">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-target="#collapse{{ bandVacancyAssociation.id }}"
                           href="#collapse{{ bandVacancyAssociation.id }}">
                            {{ bandVacancyAssociation.bandVacancy.comment }}
                        </a>
                    </h4>
                </div>
                <div id="collapse{{ bandVacancyAssociation.id }}" class="panel-collapse collapse in">
                    <div class="panel-body">
                        Genres:
                        {% for genre in bandVacancyAssociation.bandVacancy.genres %}
                        form_row(genre.id)
                        {% endfor %}
                        Instruments:
                        {% for instrument in bandVacancyAssociation.bandVacancy.instruments %}
                            <div>{{ instrument.id }}</div>
                        {% endfor %}
                        {{ bandVacancyAssociation.id }}
                    </div>
                </div>
            </div>

        </div>
    {% endfor %}
    </div>
    {{ form(delete_form) }}

{% endblock %}